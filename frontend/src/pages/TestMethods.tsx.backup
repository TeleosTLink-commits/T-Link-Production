import React, { useState, useEffect } from 'react';
import api from '../services/api';
import './TestMethods.css';

interface TestMethod {
  id?: number;
  legacy_number: string;
  official_number?: string;
  display_title: string;
  full_title: string;
  method_type: string;
  legacy_lab_source?: string;
  category_id?: number;
  status: string;
  verification_status: string;
  method_description?: string;
  equipment_required?: string;
  reagents_required?: string;
  safety_notes?: string;
  turnaround_time_days?: number;
}

const TestMethods: React.FC = () => {
  const [testMethods, setTestMethods] = useState<TestMethod[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const [showModal, setShowModal] = useState(false);
  const [editingMethod, setEditingMethod] = useState<TestMethod | null>(null);
  const [categories, setCategories] = useState<any[]>([]);
  
  const [formData, setFormData] = useState<TestMethod>({
    legacy_number: '',
    display_title: '',
    full_title: '',
    method_type: '',
    status: 'active',
    verification_status: 'pending_review'
  });

  useEffect(() => {
    fetchTestMethods();
    fetchCategories();
  }, []);

  const fetchCategories = async () => {
    try {
      const response = await api.get('/test-methods/categories');
      setCategories(response.data.data || []);
    } catch (err) {
      console.error('Failed to load categories:', err);
    }
  };

  const fetchTestMethods = async () => {
    try {
      const response = await api.get('/test-methods?page=1&limit=100');
      setTestMethods(response.data.data);
      setLoading(false);
    } catch (err: any) {
      setError(err.response?.data?.message || 'Failed to load test methods');
      setLoading(false);
    }
  };

  const handleAdd = () => {
    setEditingMethod(null);
    setFormData({
      legacy_number: '',
      display_title: '',
      full_title: '',
      method_type: '',
      status: 'active',
      verification_status: 'pending_review'
    });
    setShowModal(true);
  };

  const handleEdit = (method: TestMethod) => {
    setEditingMethod(method);
    setFormData(method);
    setShowModal(true);
  };

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    try {
      if (editingMethod) {
        await api.put(`/test-methods/${editingMethod.id}`, formData);
      } else {
        await api.post('/test-methods', formData);
      }
      setShowModal(false);
      fetchTestMethods();
    } catch (err: any) {
      alert(err.response?.data?.message || 'Failed to save test method');
    }
  };

  const handleDelete = async (id: number) => {
    if (!confirm('Are you sure you want to delete this test method?')) return;
    try {
      await api.delete(`/test-methods/${id}`);
      fetchTestMethods();
    } catch (err: any) {
      alert(err.response?.data?.message || 'Failed to delete test method');
    }
  };

  const handleStandardize = async (id: number) => {
    const officialNumber = prompt('Enter official T-Link number (e.g., TM-001):');
    if (!officialNumber) return;
    try {
      await api.post(`/test-methods/${id}/standardize`, { official_number: officialNumber });
      fetchTestMethods();
    } catch (err: any) {
      alert(err.response?.data?.message || 'Failed to standardize');
    }
  };

  if (loading) return <div className="test-methods-container"><div className="loading">Loading test methods...</div></div>;
  if (error) return <div className="test-methods-container"><div className="error-message">{error}</div></div>;

  return (
    <div className="test-methods-container">
      <div className="page-header">
        <h1>Test Methods Library</h1>
        <button className="btn-primary" onClick={handleAdd}>
          + Add Test Method
        </button>
      </div>

      <div className="table-container">
        <table className="test-methods-table">
          <thead>
            <tr>
              <th>Number</th>
              <th>Title</th>
              <th>Type</th>
              <th>Lab Source</th>
              <th>Status</th>
              <th>Verification</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {testMethods.length === 0 ? (
              <tr>
                <td colSpan={7} style={{ textAlign: 'center', padding: '40px' }}>
                  <p>No test methods found.</p>
                  <p>Click &quot;+ Add Test Method&quot; to create one, or import from CSV.</p>
                </td>
              </tr>
            ) : (
              testMethods.map((method: TestMethod) => (
                <tr key={method.id}>
                  <td>
                    {method.official_number ? (
                      <><strong>{method.official_number}</strong><br/><small>{method.legacy_number}</small></>
                    ) : (
                      <span style={{color: '#d97706'}}>{method.legacy_number || 'NO NUMBER'}</span>
                    )}
                  </td>
                  <td>{method.display_title}</td>
                  <td>{method.method_type || ''}</td>
                  <td><small>{method.legacy_lab_source || ''}</small></td>
                  <td><span className="badge">{method.status}</span></td>
                  <td><span className="badge">{method.verification_status}</span></td>
                  <td>
                    <button className="btn-icon" onClick={() => handleEdit(method)} title="Edit"> Edit</button>
                    {!method.official_number && (
                      <button className="btn-icon" onClick={() => handleStandardize(method.id!)} title="Standardize"> Standardize</button>
                    )}
                    <button className="btn-icon" onClick={() => handleDelete(method.id!)} title="Delete"> Delete</button>
                  </td>
                </tr>
              ))
            )}
          </tbody>
        </table>
      </div>

      {showModal && (
        <div className="modal-overlay" onClick={() => setShowModal(false)}>
          <div className="modal-content" onClick={(e) => e.stopPropagation()}>
            <div className="modal-header">
              <h2>{editingMethod ? 'Edit Test Method' : 'Add Test Method'}</h2>
              <button className="btn-close" onClick={() => setShowModal(false)}></button>
            </div>
            <form onSubmit={handleSubmit}>
              <div className="form-grid">
                <div className="form-group">
                  <label>Legacy Number *</label>
                  <input
                    type="text"
                    value={formData.legacy_number}
                    onChange={(e) => setFormData({...formData, legacy_number: e.target.value})}
                    required
                    placeholder="e.g., LAB-A-2019-05"
                  />
                </div>
                
                <div className="form-group">
                  <label>Display Title *</label>
                  <input
                    type="text"
                    value={formData.display_title}
                    onChange={(e) => setFormData({...formData, display_title: e.target.value})}
                    required
                    placeholder="e.g., GC Analysis for Purity"
                  />
                </div>

                <div className="form-group full-width">
                  <label>Full Title *</label>
                  <input
                    type="text"
                    value={formData.full_title}
                    onChange={(e) => setFormData({...formData, full_title: e.target.value})}
                    required
                    placeholder="Complete technical title"
                  />
                </div>

                <div className="form-group">
                  <label>Method Type *</label>
                  <select
                    value={formData.method_type}
                    onChange={(e) => setFormData({...formData, method_type: e.target.value})}
                    required
                  >
                    <option value="">Select type...</option>
                    <option value="GC">Gas Chromatography (GC)</option>
                    <option value="HPLC">HPLC</option>
                    <option value="FTIR">FTIR</option>
                    <option value="NMR">NMR</option>
                    <option value="Titration">Titration</option>
                    <option value="Wet Chemistry">Wet Chemistry</option>
                    <option value="Physical Testing">Physical Testing</option>
                    <option value="Other">Other</option>
                  </select>
                </div>

                <div className="form-group">
                  <label>Category</label>
                  <select
                    value={formData.category_id || ''}
                    onChange={(e) => setFormData({...formData, category_id: e.target.value ? parseInt(e.target.value) : undefined})}
                  >
                    <option value="">Select category...</option>
                    {categories.map(cat => (
                      <option key={cat.id} value={cat.id}>{cat.name}</option>
                    ))}
                  </select>
                </div>

                <div className="form-group">
                  <label>Legacy Lab Source</label>
                  <input
                    type="text"
                    value={formData.legacy_lab_source || ''}
                    onChange={(e) => setFormData({...formData, legacy_lab_source: e.target.value})}
                    placeholder="e.g., Dow Chemical, External Lab A"
                  />
                </div>

                <div className="form-group">
                  <label>Turnaround Time (days)</label>
                  <input
                    type="number"
                    value={formData.turnaround_time_days || ''}
                    onChange={(e) => setFormData({...formData, turnaround_time_days: e.target.value ? parseInt(e.target.value) : undefined})}
                    placeholder="e.g., 2"
                  />
                </div>

                <div className="form-group full-width">
                  <label>Description</label>
                  <textarea
                    value={formData.method_description || ''}
                    onChange={(e) => setFormData({...formData, method_description: e.target.value})}
                    rows={3}
                    placeholder="Brief description of the test method"
                  />
                </div>

                <div className="form-group full-width">
                  <label>Equipment Required</label>
                  <textarea
                    value={formData.equipment_required || ''}
                    onChange={(e) => setFormData({...formData, equipment_required: e.target.value})}
                    rows={2}
                    placeholder="List equipment needed"
                  />
                </div>

                <div className="form-group full-width">
                  <label>Reagents Required</label>
                  <textarea
                    value={formData.reagents_required || ''}
                    onChange={(e) => setFormData({...formData, reagents_required: e.target.value})}
                    rows={2}
                    placeholder="List reagents/chemicals needed"
                  />
                </div>

                <div className="form-group full-width">
                  <label>Safety Notes</label>
                  <textarea
                    value={formData.safety_notes || ''}
                    onChange={(e) => setFormData({...formData, safety_notes: e.target.value})}
                    rows={2}
                    placeholder="Important safety information"
                  />
                </div>
              </div>

              <div className="modal-footer">
                <button type="button" className="btn-secondary" onClick={() => setShowModal(false)}>
                  Cancel
                </button>
                <button type="submit" className="btn-primary">
                  {editingMethod ? 'Update' : 'Create'} Test Method
                </button>
              </div>
            </form>
          </div>
        </div>
      )}
    </div>
  );
};

export default TestMethods;
