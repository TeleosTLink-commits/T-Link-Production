# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Database Configuration (PostgreSQL)
DB_HOST=your_database_host
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_SSL=true

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Cloudinary Configuration (for file storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (SMTP for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@yourcompany.com

# FedEx API Configuration
# Use sandbox for testing: https://apis-sandbox.fedex.com
# Use production: https://apis.fedex.com
FEDEX_API_BASE_URL=https://apis-sandbox.fedex.com
FEDEX_ACCOUNT_NUMBER=your_fedex_account_number
FEDEX_API_KEY=your_fedex_api_key
FEDEX_SECRET_KEY=your_fedex_secret_key

# Lab Shipping Address (Ship FROM address)
LAB_ADDRESS_STREET=Your Street Address
LAB_ADDRESS_CITY=Your City
LAB_ADDRESS_STATE=YS
LAB_ADDRESS_ZIP=12345
LAB_ADDRESS_COUNTRY=US

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Notification Settings
EXPIRATION_WARNING_DAYS=30,60,90
LOW_INVENTORY_CHECK_INTERVAL=daily
SHIPMENT_NOTIFICATION_EMAIL=logistics@yourcompany.com

